rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Deny all reads and writes by default on any other collection
    match /{document=**} {
      allow read, write: if false;
    }

    // Rules for the 'documents' collection
    match /documents/{docId} {
      // Allow any authenticated user to read (get, list) documents.
      // This is necessary for students, staff, etc., to download their files.
      allow read: if request.auth != null;

      // Allow write (create, update, delete) operations only if the user is an admin.
      // This rule relies on a custom claim 'admin' being set to true for admin users.
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
